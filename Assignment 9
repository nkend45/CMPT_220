
        /*
Remember that stacks/queues/linkedlists all work super similarly to arraylists, so i bet you $10 you could reference earlier HW if you get stuck....

1. Take the stack I created and find the maximum and minimum value
2. Find out how many elements were in the stack

3. Find the middle value of the linkedlist I created

4. Implement a real life example of any of the structures and do at least 3 operations to it
*/

import java.util.Stack;

import java.util.LinkedList;

public class Main {
    public static void main(String[] args) {
        Stack<Integer> stax = new Stack<>();
        
        stax.push(70);
        stax.push(34);
        stax.push(807);
        stax.push(61);
        stax.push(28);
        stax.push(563);
        stax.push(492);
        stax.push(386);

        int maxValue = stax.peek();
        int minValue = stax.peek();

            for (int staxValue : stax){
                if (staxValue > maxValue){
                    maxValue = staxValue;
                }
                if (staxValue < minValue){
                    minValue = staxValue;
                }
            }

        System.out.println("The max value in the stack is " + maxValue);
        System.out.println("The minimum value in the stack is " + minValue);
        System.out.println("This stack has " + stax.size() +" elements.");
            
        
        
        LinkedList<Integer> linky = new LinkedList<>();

        linky.add(10);
        linky.add(20);
        linky.add(30);
        linky.add(40);
        linky.add(50);
        
       int indexOfMiddle = linky.size() / 2;
       int linkyMiddleValue = linky.get(indexOfMiddle);
       System.out.println("The middle value of linky is " + linkyMiddleValue);
       
       LinkedList<String> christmasWishlist = new LinkedList<>();
       christmasWishlist.add("coal");
       christmasWishlist.add("computer parts");
       christmasWishlist.add("money");
       christmasWishlist.removeFirst();
       christmasWishlist.add(1, "socks");
       System.out.println(christmasWishlist);
     
       
    }
}
